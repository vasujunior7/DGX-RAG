# ==============================================================================
# HackRX API - Environment Variables Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual API keys
# Never commit .env file to version control!

# ==============================================================================
# ü§ñ LLM PROVIDER API KEYS
# ==============================================================================

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Claude - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI/Gemini - Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Groq - Get from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face - Get from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HF_TOKEN=your_hf_token_here

# Cohere - Get from https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Together AI - Get from https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=your_together_api_key_here

# Replicate - Get from https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_token_here

# ==============================================================================
# üîß SERVICE API KEYS
# ==============================================================================

# LangChain - Get from https://smith.langchain.com/
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=false

# Azure OpenAI - Get from Azure Portal
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# AWS Services
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-west-2

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_env_here

WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_URL=https://your-cluster.weaviate.network

CHROMA_SERVER_AUTH_CREDENTIALS=your_chroma_auth_here

# ==============================================================================
# üóÑÔ∏è DATABASE CONNECTIONS
# ==============================================================================

# Primary Database
DATABASE_URL=postgresql://user:password@localhost:5432/hackrx_db

# Alternative Database URLs
POSTGRES_URL=postgresql://user:password@localhost:5432/hackrx_db
MONGODB_URI=mongodb://localhost:27017/hackrx_db
REDIS_URL=redis://localhost:6379/0
SQLITE_PATH=./data/hackrx.db

# ==============================================================================
# üîê AUTHENTICATION & SECURITY
# ==============================================================================

# API Authentication
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
AUTH_TOKEN=your_auth_token_here

# ==============================================================================
# üìä APPLICATION SETTINGS
# ==============================================================================

# Server Configuration
SERVER_URL=http://localhost:8000
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# ==============================================================================
# üìà MONITORING & ANALYTICS
# ==============================================================================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Application Performance Monitoring
DATADOG_API_KEY=your_datadog_api_key_here
NEWRELIC_LICENSE_KEY=your_newrelic_license_key_here

# ==============================================================================
# üõ†Ô∏è DEVELOPMENT SETTINGS
# ==============================================================================

# Silent loading (set to true to disable startup logs)
SILENT_LOAD=false

# ==============================================================================
# USAGE INSTRUCTIONS:
# ==============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and credentials
# 3. Never commit the .env file to version control
# 4. Use api_key_manager.print_key_status() to check loaded keys
# ==============================================================================
